<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
          <p>
            <% if micropost.img? %>
             <%= image_tag micropost.img.url %>
          <% end %>
          </p>
        </div>
        <div>
          <% if current_user == micropost.user %>
          <%= link_to '編集', edit_micropost_path(micropost), class: 'btn btn-light btn-sm' %>
            <%= link_to "削除", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%= render 'favorites/favorites_button',   micropost: micropost %> 
        </div>
      </div>
    </li>
  <% end %>
  
</ul>